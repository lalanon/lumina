{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lumina.example/schema/identify_output.json",
  "title": "Lumina Identify Output",
  "type": "object",
  "additionalProperties": false,

  "required": [
    "work_type",
    "confidence"
  ],

  "properties": {
    "work_type": {
      "type": "string",
      "enum": ["book", "magazine", "comic"]
    },

    "title": {
      "type": ["string", "null"],
      "minLength": 1
    },

    "language": {
      "type": ["string", "null"],
      "pattern": "^[a-z]{2}$"
    },

    "authors": {
      "type": ["array", "null"],
      "items": {
        "$ref": "#/$defs/author"
      },
      "minItems": 1
    },

    "series": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "volume": {
          "type": ["string", "null"]
        },
        "volume_index": {
          "type": ["integer", "null"],
          "minimum": 1
        }
      }
    },

    "subjects": {
      "type": ["array", "null"],
      "items": {
        "$ref": "#/$defs/subject"
      },
      "minItems": 1
    },

    "tags": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "pattern": "^[a-z_]+:[a-z0-9_-]+$"
      },
      "uniqueItems": true
    },

    "confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },

    "warnings": {
      "type": ["array", "null"],
      "items": {
        "type": "string",
        "enum": [
          "partial_input",
          "low_confidence",
          "inferred_from_filename",
          "format_noise",
          "ambiguous_language",
          "ambiguous_series"
        ]
      },
      "uniqueItems": true
    }
  },

  "$defs": {
    "author": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "role": {
          "type": "string",
          "enum": ["author", "editor", "translator"]
        },
        "position": {
          "type": ["integer", "null"],
          "minimum": 1
        }
      }
    },

    "subject": {
      "type": "object",
      "additionalProperties": false,
      "required": ["taxonomy_path", "confidence"],
      "properties": {
        "taxonomy_path": {
          "type": "string",
          "minLength": 1
        },
        "confidence": {
          "type": "number",
          "minimum": 0.0,
          "maximum": 1.0
        }
      }
    }
  }
}

