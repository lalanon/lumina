{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lumina.project/schema/identify_output.schema.json",
  "title": "Lumina Identify Output",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "hash",
      "status",
      "confidence",
      "work_type",
      "title"
    ],
    "additionalProperties": false,
    "properties": {
      "hash": {
        "type": "string"
      },
      "status": {
        "type": "string",
        "enum": ["identified", "partial", "reject", "non-identifiable"]
      },
      "confidence": {
        "type": "number",
        "minimum": 0.0,
        "maximum": 1.0
      },
      "work_type": {
        "type": "string",
        "enum": ["book", "comic", "magazine", "non-book"]
      },
      "title": {
        "type": ["string", "null"]
      },
      "author": {
        "type": ["string", "null"]
      },
      "series": {
        "type": ["string", "null"]
      },
      "volume": {
        "type": ["string", "null"]
      },
      "isbn": {
        "type": ["string", "null"]
      },
      "language": {
        "type": ["string", "null"]
      },
      "root_category": {
        "type": ["string", "null"]
      },
      "second_level_category": {
        "type": ["string", "null"]
      },
      "tags": {
        "type": ["array", "null"],
        "items": {
          "type": "string"
        }
      },
      "reasoning": {
        "type": ["string", "null"]
      },
      "model": {
        "type": ["string", "null"]
      },
      "token_cost": {
        "type": ["number", "null"]
      }
    }
  }
}

